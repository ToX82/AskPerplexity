{
  "manifest_version": 3,
  "name": "Ask Perplexity",
  "description": "Ask for clarifications, summaries or explanations on any web page.",
  "version": "1.0.2",
  "default_locale": "en",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "author": "Emanuele 'ToX' Toscano",
  "homepage_url": "https://github.com/ToX82/",
  "permissions": ["activeTab"]
}
